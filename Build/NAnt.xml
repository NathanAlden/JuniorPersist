<?xml version="1.0" encoding="utf-8"?>
<project name="JuniorPersist" default="Build" xmlns="http://nant.sf.net/schemas/nant.xsd">
	<!-- NAnt -->
	<property name="nant.settings.currentframework" value="net-4.0"/>

	<property name="SubProject" value=""/>
	<property name="AssemblyInfoPath" value=""/>
	<property name="NuGetVersion" value=""/>

	<!-- Build configuration -->
	<property name="Platform" value="Any CPU" overwrite="false"/>
	<property name="BuildConfiguration" value="Release" overwrite="false"/>

	<!-- Directories -->
	<property name="TrunkDirectory" value="${directory::get-parent-directory(path::get-directory-name(project::get-buildfile-path()))}"/>
	<property name="BuildDirectory" value="${path::combine(TrunkDirectory, 'Build')}"/>
	<property name="SourceDirectory" value="${path::combine(TrunkDirectory, 'Source')}"/>
	<property name="NuGetResultsDirectory" value="${path::combine(BuildDirectory, 'NuGet Results')}"/>
	<property name="NuGetStagingDirectory" value="${path::combine(BuildDirectory, 'NuGet Staging')}"/>
	<property name="NuGetStagingBinDirectory" value="${path::combine(NuGetStagingDirectory, 'bin')}"/>
	<property name="NUnitResultsDirectory" value="${path::combine(BuildDirectory, 'NUnit Results')}"/>

	<!-- Paths -->
	<property name="NUnitConsolePath" value="${path::combine(BuildDirectory, 'NUnit-2.6.2\bin\nunit-console.exe')}"/>
	<property name="NuGetPath" value="${path::combine(BuildDirectory, 'NuGet-2.0\NuGet.exe')}"/>
	<property name="SolutionPath" value="${path::combine(SourceDirectory, project::get-name() + '.sln')}"/>

	<!-- Build -->
	<target name="Build">
		<call target="Compile"/>
		<call target="DeleteNUnitResults"/>
		<call target="RunUnitTests"/>
		<if test="${BuildConfiguration == 'Release'}">
			<call target="RecreateNuGetResultsDirectory"/>
			<foreach item="String" in="Sessions,Data-Core,Data-ActiveRecord,Data-MySql,Data-PostgreSql,Data-SqlServer,Persistence-Core,Persistence-ActiveRecord,Persistence-MySql,Persistence-PostgreSql,Persistence-SqlServer" delim="," property="SubProject">
				<property name="AssemblyInfoPath" value="${path::combine(SourceDirectory, string::replace(string::replace(SubProject, '-Core', ''), '-', '.') + '\Properties\AssemblyInfo.cs')}"/>
				<call target="StageNuGetFiles"/>
				<call target="CreateNuGetPackage"/>
				<call target="DeleteStagedFiles"/>
			</foreach>
		</if>
	</target>

	<!-- Compile -->
	<target name="Compile">
		<exec
			program="${framework::get-framework-directory(framework::get-target-framework())}\msbuild.exe"
			workingdir="."
			verbose="true">
			<arg value="${SolutionPath}"/>
			<arg value="/t:Clean;Rebuild"/>
			<arg value="/p:Configuration=${BuildConfiguration};Platform=${Platform}"/>
			<arg value="/v:q"/>
		</exec>
	</target>

	<!-- Test -->
	<target name="DeleteNUnitResults">
		<delete dir="${NUnitResultsDirectory}"/>
		<mkdir dir="${NUnitResultsDirectory}"/>
	</target>
	<target name="RunUnitTests">
		<property name="UnitTestAssemblyPath" value="${path::combine(SourceDirectory, 'UnitTests\bin\' + BuildConfiguration + '\Junior.Persist.UnitTests.dll')}"/>
		<call target="ExecuteNUnit"/>
	</target>
	<target name="ExecuteNUnit">
		<exec program="${NUnitConsolePath}" workingdir="${path::get-directory-name(UnitTestAssemblyPath)}" failonerror="true" verbose="true">
			<arg path="${UnitTestAssemblyPath}"/>
			<arg value="/xml:${NUnitResultsDirectory}\${path::get-file-name-without-extension(UnitTestAssemblyPath)}.dll-results.xml"/>
			<arg value="/noshadow"/>
			<arg value="/nothread"/>
			<arg value="/domain=Multiple"/>
			<arg value="/process=Single"/>
		</exec>
	</target>

	<!-- Package -->
	<target name="RecreateNuGetResultsDirectory">
		<delete dir="${NuGetResultsDirectory}"/>
		<mkdir dir="${NuGetResultsDirectory}"/>
	</target>
	<target name="StageNuGetFiles">
		<delete dir="${NuGetStagingDirectory}"/>
		<mkdir dir="${NuGetStagingDirectory}"/>
		<copy todir="${NuGetStagingDirectory}">
			<fileset basedir="${TrunkDirectory}">
				<include name="LICENSE"/>
				<include name="README.md"/>
			</fileset>
		</copy>
		<if test="${SubProject == 'Sessions'}">
			<copy todir="${NuGetStagingBinDirectory}">
				<fileset basedir="${path::combine(SourceDirectory, 'Sessions\bin\' + BuildConfiguration)}">
					<include name="Junior.Persist.Sessions.*"/>
				</fileset>
			</copy>
		</if>
		<if test="${SubProject == 'Data-Core'}">
			<copy todir="${NuGetStagingBinDirectory}">
				<fileset basedir="${path::combine(SourceDirectory, 'Data\bin\' + BuildConfiguration)}">
					<include name="Junior.Persist.Data.*"/>
				</fileset>
			</copy>
		</if>
		<if test="${SubProject == 'Data-ActiveRecord'}">
			<copy todir="${NuGetStagingBinDirectory}">
				<fileset basedir="${path::combine(SourceDirectory, 'Data.ActiveRecord\bin\' + BuildConfiguration)}">
					<include name="Junior.Persist.Data.ActiveRecord.*"/>
				</fileset>
			</copy>
		</if>
		<if test="${SubProject == 'Data-MySql'}">
			<copy todir="${NuGetStagingBinDirectory}">
				<fileset basedir="${path::combine(SourceDirectory, 'Data.MySql\bin\' + BuildConfiguration)}">
					<include name="Junior.Persist.Data.MySql.*"/>
				</fileset>
			</copy>
		</if>
		<if test="${SubProject == 'Data-PostgreSql'}">
			<copy todir="${NuGetStagingBinDirectory}">
				<fileset basedir="${path::combine(SourceDirectory, 'Data.PostgreSql\bin\' + BuildConfiguration)}">
					<include name="Junior.Persist.Data.PostgreSql.*"/>
				</fileset>
			</copy>
		</if>
		<if test="${SubProject == 'Data-SqlServer'}">
			<copy todir="${NuGetStagingBinDirectory}">
				<fileset basedir="${path::combine(SourceDirectory, 'Data.SqlServer\bin\' + BuildConfiguration)}">
					<include name="Junior.Persist.Data.SqlServer.*"/>
				</fileset>
			</copy>
		</if>
		<if test="${SubProject == 'Persistence-Core'}">
			<copy todir="${NuGetStagingBinDirectory}">
				<fileset basedir="${path::combine(SourceDirectory, 'Persistence\bin\' + BuildConfiguration)}">
					<include name="Junior.Persist.Persistence.*"/>
				</fileset>
			</copy>
		</if>
		<if test="${SubProject == 'Persistence-ActiveRecord'}">
			<copy todir="${NuGetStagingBinDirectory}">
				<fileset basedir="${path::combine(SourceDirectory, 'Persistence.ActiveRecord\bin\' + BuildConfiguration)}">
					<include name="Junior.Persist.Persistence.ActiveRecord.*"/>
				</fileset>
			</copy>
		</if>
		<if test="${SubProject == 'Persistence-MySql'}">
			<copy todir="${NuGetStagingBinDirectory}">
				<fileset basedir="${path::combine(SourceDirectory, 'Persistence.MySql\bin\' + BuildConfiguration)}">
					<include name="Junior.Persist.Persistence.MySql.*"/>
				</fileset>
			</copy>
		</if>
		<if test="${SubProject == 'Persistence-PostgreSql'}">
			<copy todir="${NuGetStagingBinDirectory}">
				<fileset basedir="${path::combine(SourceDirectory, 'Persistence.PostgreSql\bin\' + BuildConfiguration)}">
					<include name="Junior.Persist.Persistence.PostgreSql.*"/>
				</fileset>
			</copy>
		</if>
		<if test="${SubProject == 'Persistence-SqlServer'}">
			<copy todir="${NuGetStagingBinDirectory}">
				<fileset basedir="${path::combine(SourceDirectory, 'Persistence.SqlServer\bin\' + BuildConfiguration)}">
					<include name="Junior.Persist.Persistence.SqlServer.*"/>
				</fileset>
			</copy>
		</if>
		<script language="C#">
			<imports>
				<import namespace="System.Linq"/>
				<import namespace="System.Text.RegularExpressions"/>
			</imports>
			<references>
				<include name="System.dll"/>
				<include name="System.Core.dll"/>
			</references>
			<code>
				<![CDATA[
				public static void ScriptMain(Project project)
				{
					string assemblyInfoPath = project.Properties["AssemblyInfoPath"];
					string assemblyInfo = File.ReadAllText(assemblyInfoPath);
					string version = Regex.Match(assemblyInfo, @"(?<=AssemblyFileVersion\(\"").*?(?=\""\))").Value;
					
					version = String.Join(".", version.Split('.').Take(3));
					
					project.Properties["NuGetVersion"] = version;
				}
				]]>
			</code>
		</script>
	</target>
	<target name="CreateNuGetPackage">
		<exec
			program="${NuGetPath}"
			workingdir="."
			verbose="true">
			<arg value="pack"/>
			<arg value="NuGet-${SubProject}.nuspec"/>
			<arg value="-Version"/>
			<arg value="${NuGetVersion}"/>
			<arg value="-OutputDirectory"/>
			<arg value="${NuGetResultsDirectory}"/>
		</exec>
	</target>
	<target name="DeleteStagedFiles">
		<delete dir="${NuGetStagingDirectory}"/>
	</target>
</project>